digraph DB4Sci_Arch {
 rankdir=LR;
 splines = "line"
 fontname="Helvetica";

subgraph cluster_0 {
  style=invis
  Users [labelshape=circle, style=filled, fillcolor="#39B6B9"]
}

subgraph cluster_1 {
  fontname="Helvetica";
  adauth [label="AD Auth", style=filled, fillcolor="#8FAADC" ]
}

subgraph cluster_1 {
  label="  docker"; lablelloc=t; labeljust=left; fontsize=30;
  color = black;
  style = "filled,rounded";
  fillcolor = "#E7E6E6";
  #splines = false

  node [shape=box];
  dbaas [shape=record, label="{<f0> uwsgi|<f2> DB4Sci\nFlask}", style=filled, fillcolor="#89c348"];
  mydb_admin [label="PostgreSQL\nmydb_admin", 
              style=filled, fillcolor=lightblue, color=black];
